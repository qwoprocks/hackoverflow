{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-use-before-define": "off",
        "react/prop-types": "off",
        "react/jsx-filename-extension": "off",
        "react/destructuring-assignment": "off",
        "global-require": "off",
        "no-shadow": "off",
        "react/jsx-props-no-spreading": "off",
        "no-param-reassign": "off"
    }
}